---
export interface Props {
  link: string
}

const { link } = Astro.props
---

<pre
  class="snippet">
  <a href={link} target="_blank" rel="noopener noreferrer" class="snippet-link">
    <code>{link} â†—</code>
  </a>
</pre>

<style>
  .snippet {
    background-color: #262626;
    color: #fff;
    border-radius: 2rem;
    font-family: 'Roboto Mono', monospace;
    padding-right: 1.5rem;
  }

  .snippet-link {
    display: inline-block;
    color: #ff6666;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.2s ease-in-out;
    font-family: 'Bebas Neue', sans-serif;
  }

  .snippet-link:hover {
    color: #c926c1;
  }

  @media (max-width: 768px) {
    .snippet {
      font-size: 0.85rem;
    }
  }
</style>
